{
  "name": "terraform-action",
  "version": "1.0.0",
  "description": "Run Terraform plan/apply based on PR comments, similar to Atlantis, using tfcmt",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build",
    "test": "jest",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check --write src"
  },
  "keywords": [
    "terraform",
    "github-actions",
    "pull-request",
    "tfcmt",
    "automation"
  ],
  "author": "Terraform Action Contributors",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^7.0.0",
    "@actions/io": "^2.0.0",
    "@actions/tool-cache": "^3.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.16",
    "jest": "^30.2.0",
    "typescript": "^5.3.3"
  }
}
